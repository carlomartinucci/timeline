<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :person_id %>
    <%= form.select :person_id, Person.all.pluck(:name, :id) %>
  </div>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :started_at %>
    <%= form.date_select :started_at, start_year: 1900, end_year: Time.zone.now.year, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :ended_at %>
    <%= form.date_select :ended_at, start_year: 1900, end_year: Time.zone.now.year, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
