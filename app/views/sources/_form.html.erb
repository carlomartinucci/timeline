<%= form_with(model: source, local: true) do |form| %>
  <% if source.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(source.errors.count, "error") %> prohibited this source from being saved:</h2>

      <ul>
      <% source.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: "text-sm-right col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :body, class: "text-sm-right col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_area :body, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :person_id, 'Claimed by', class: "text-sm-right col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.select :person_id, Person.all.pluck(:name, :id), {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group position-relative row">
    <%= form.label :released_at, class: "text-sm-right col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.date_field :released_at, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :url, class: "text-sm-right col-sm-4 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :url, class: 'form-control' %>
    </div>
  </div>

  <div class="text-center">
    <%= form.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
